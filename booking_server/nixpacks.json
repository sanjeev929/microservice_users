{
    "phases": {
      "setup": {
        "commands": [
          "python3 -m venv --copies /opt/venv",
          ". /opt/venv/bin/activate"
        ]
      },
      "install": {
        "commands": [
          "pip install -r requirements.txt"
        ]
      },
      "start": {
        "commands": [
          "gunicorn myproject.wsgi:application --bind 0.0.0.0:$PORT"
        ]
      }
    },
    "environment": {
      "DJANGO_SETTINGS_MODULE": "myproject.settings"
    }
  }
  